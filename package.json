{
  "name": "effect-vite-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "start": "PORT=4173 NODE_ENV=production node server.ts"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@effect/platform": "^0.90.5",
    "@effect/platform-node": "^0.96.0",
    "effect": "^3.17.8"
  }
}
